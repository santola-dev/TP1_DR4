@page
@model ProductCatalog.Pages.AddProductModel
@{
    ViewData["Title"] = "Adicionar Produto";
}

<h1>Adicionar Produto</h1>

<form method="post">
    <div>
        <label for="Name">Nome:</label>
        <input type="text" id="Name" name="Product.Name" value="@Model.Product?.Name" />
    </div>
    <div>
        <label for="Price">Preço:</label>
        <input type="number" step="0.01" id="Price" name="Product.Price" value="@Model.Product?.Price" />
    </div>
    <button type="submit">Enviar</button>
</form>

@if (Model.ShowResult)
{
<h2>Produto Adicionado:</h2>
<p><strong>Nome:</strong> @Model.Product.Name</p>
<p><strong>Preço:</strong> R$ @Model.Product.Price</p>
}

